<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_autocomplete" %><br>

  <datalist id="artist_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>

  <%= f.label "Notes: " %>
  <%= f.text_field :notes, value: "", id: "song_notes_1", name: "notes[]" %>
  <%= f.text_field :notes, value: "", id: "song_notes_2", name: "notes[]" %>
  <%= f.text_field :notes, value: "", id: 'song_notes_3', name: "notes[]" %>

  <%= f.submit %>
<% end %>
